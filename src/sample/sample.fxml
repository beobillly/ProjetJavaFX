<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Controller">
    <top>
        <MenuBar useSystemMenuBar="true">
            <Menu text="Fichier">
                <MenuItem text="Recommencer" onAction="#relancer" accelerator="shortcut+R">
                </MenuItem>
                <MenuItem text="Sauvegarder" onAction="#sauvegarder" accelerator="shortcut+S">
                </MenuItem>
                <MenuItem text="Quitter" onAction="#quitter" accelerator="shortcut+Q">
                </MenuItem>

            </Menu>
            <Menu text="Options">
                <MenuItem text="Jouer" onAction="#jouer" accelerator="shortcut+J">
                </MenuItem>
                <MenuItem text="Pause" onAction="#pause" accelerator="shortcut+P">
                </MenuItem>
                <MenuItem text="Changer les contrôles" onAction="#controle" accelerator="shortcut+C">
                </MenuItem>
                <MenuItem text="Changer le background" onAction="#backgroung" accelerator="shortcut+B">
                </MenuItem>
                <MenuItem text="Changer la difficulté" onAction="#difficute" accelerator="shortcut+D">
                </MenuItem>

            </Menu>

            <Menu text="Multijoueur">
                <MenuItem text="Ajouter un joueur" onAction="#createPlayer" accelerator="shortcut+H">
                </MenuItem>
                <MenuItem text="Changer les contrôles" onAction="#controle" accelerator="shortcut+H">
                </MenuItem>
                <MenuItem text="Enlever un joueur" onAction="#removePlayer" accelerator="shortcut+H">
                </MenuItem>
            </Menu>

            <Menu text="Aide">
                <MenuItem text="Afficher l'aide" onAction="#help" accelerator="shortcut+H">

                </MenuItem>

            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox alignment="center">
            <padding>
                <Insets left="10" right="10" top="10" bottom="10"/>
            </padding>
            <children>
                <HBox alignment="TOP_CENTER" spacing="30">
                    <padding>
                        <Insets top="10" bottom="10"
                                left="10" right="10"/>
                    </padding>
                    <VBox alignment="center" spacing="30" prefWidth="250">
                        <Label fx:id="label_Vie">

                        </Label>
                        <Label fx:id="label_Munitions">

                        </Label>
                        <Label fx:id="label_Ultimate">

                        </Label>
                        <Label fx:id="label_Ennemis">

                        </Label>

                        <Label fx:id="label_Direction">

                        </Label>


                    </VBox>

                    <Pane fx:id="pane" prefWidth="900" prefHeight="700"/>

                </HBox>


                <FlowPane orientation="horizontal"
                          alignment="BOTTOM_CENTER" hgap="10">

                    <Button text="Ultimate" alignment="center" prefWidth="80.0" prefHeight="80.0"
                            fx:id="button" onAction="#itsHighNoooooon">
                    </Button>
                </FlowPane>


            </children>
        </VBox>


    </center>
    <bottom>
        <TitledPane text="vitesse">
            <Slider fx:id="slider" max="1" value="0.3"/>
        </TitledPane>
    </bottom>
</BorderPane>

